    <groupId>com.creolophus</groupId>
    <artifactId>liuyi-ms</artifactId>
    <packaging>jar</packaging>
    <version>1.1.3</version>

    <profiles>
        <profile>
            <id>local</id>
            <properties>
                <resource.dir>local</resource.dir>
            </properties>
        </profile>
        <profile>
            <id>dev</id>
            <properties>
                <resource.dir>dev</resource.dir>
            </properties>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
        </profile>
        <profile>
            <id>test</id>
            <properties>
                <resource.dir>test</resource.dir>
            </properties>
        </profile>
        <profile>
            <id>prod</id>
            <properties>
                <resource.dir>prod</resource.dir>
            </properties>
        </profile>
    </profiles>


    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <java.version>1.8</java.version>
        <spring.cloud.version>Finchley.SR2</spring.cloud.version>
        <dockerfile-plugin-version>1.4.6</dockerfile-plugin-version>
    </properties>


        <dependencies>

